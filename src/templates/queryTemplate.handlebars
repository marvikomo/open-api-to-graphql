/** @format */

const {{tag}}_schema = `#graphql

  directive @auth on FIELD_DEFINITION
  directive @userType(requires: [UserType]) on FIELD_DEFINITION

  scalar Upload
  scalar JSON

  type Query {
    {{#each queries}}
    {{this.name}}(firstName: String, lastName: String): {{ this.responseType }}
    {{/each}}
  }

  type Mutation {
    {{#each mutations}}
    {{this.name}}(firstName: String, lastName: String): {{ this.responseType }}
    {{/each}}
  }

    {{#each types}}
    {{#if this.aliasFor}}
  type {{this.name}} = {{this.aliasFor}}
    {{else}}
  type {{this.name}} {
      {{#each this.fields}}
    {{this.name}}: {{this.type}}{{#if this.required}}!{{/if}}
      {{/each}}
  }
    {{/if}}
  {{/each}}
  
`;

export default {{tag}}_schema;
